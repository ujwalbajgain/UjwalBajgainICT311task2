<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">
    <TextView
        android:id="@+id/diary_title_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diary Title"/>

    <TextView
        android:id="@+id/diary_place_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Diary Destination"
        android:padding="4dp"
        android:layout_below="@+id/diary_title_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold|italic" />

    />

    <TextView
        android:id="@+id/diary_date_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diary Date"
        tools:text="Trip Date"
        android:padding="4dp"
        android:layout_below="@+id/diary_place_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <View android:layout_width="fill_parent"
          android:layout_height="1dip"
          android:background="@color/accent_material_light"
          android:layout_below="@+id/diary_date_list"/>


</RelativeLayout>